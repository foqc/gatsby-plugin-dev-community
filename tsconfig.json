{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["es2020", "DOM", "dom.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
